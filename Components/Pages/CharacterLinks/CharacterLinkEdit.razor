@page "/characters/{Id:int}/edit"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using System.ComponentModel.DataAnnotations
@using DontNeglectYourDungeon.Services
@inject ICharacterLinkService CharacterLinksService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">ðŸ› </div>
        <div>
            <h1 class="h1">Edit Character Link</h1>
            <div class="muted">Update name or URL.</div>
        </div>
    </div>
</div>

<div class="tavern-card">
    @if (_loading)
    {
        <div class="muted">Loadingâ€¦</div>
    }
    else if (_notFound)
    {
        <div class="validation-message">Link not found (or you donâ€™t have access).</div>
        <div style="margin-top:.75rem;">
            <a class="btn" href="/campaigns">Return</a>
        </div>
    }
    else
    {
        <EditForm Model="_model" OnValidSubmit="@SaveAsync" FormName="EditCharacterLink">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div style="display:grid; gap:.75rem;">
                <div>
                    <label>Name</label>
                    <InputText @bind-Value="_model.Name" />
                    <ValidationMessage For="@(() => _model.Name)" />
                </div>

                <div>
                    <label>URL</label>
                    <InputText @bind-Value="_model.Url" />
                    <ValidationMessage For="@(() => _model.Url)" />
                </div>

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="validation-message">@_error</div>
                }

                <div style="display:flex; gap:.75rem; margin-top:.5rem;">
                    <button class="btn" type="submit" disabled="@_saving">Save</button>
                    <a class="btn" href="@_backHref">Cancel</a>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private bool _loading = true;
    private bool _saving;
    private bool _notFound;
    private string _error = string.Empty;

    private int _campaignId;
    private string _backHref = "/campaigns";

    private Model _model = new();

    public class Model
    {
        [Required, StringLength(80, MinimumLength = 2)]
        public string Name { get; set; } = string.Empty;

        [Required, StringLength(500)]
        public string Url { get; set; } = string.Empty;
    }

    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        _notFound = false;
        _error = string.Empty;

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var link = await CharacterLinksService.GetByIdAsync(auth.User, Id);

        if (link is null)
        {
            _notFound = true;
            _loading = false;
            return;
        }

        _campaignId = link.CampaignId;
        _backHref = $"/campaigns/{_campaignId}/characters";

        _model.Name = link.Name;
        _model.Url = link.Url;

        _loading = false;
    }

    private async Task SaveAsync()
    {
        _saving = true;
        _error = string.Empty;

        try
        {
            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var ok = await CharacterLinksService.UpdateAsync(auth.User, Id, _model.Name, _model.Url);

            if (!ok)
            {
                _error = "Could not saveâ€”link not found or access denied.";
                return;
            }

            Nav.NavigateTo($"/campaigns/{_campaignId}/characters");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _saving = false;
        }
    }
}
