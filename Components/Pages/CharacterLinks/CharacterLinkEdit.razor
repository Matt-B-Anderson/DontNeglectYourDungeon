@page "/characters/{Id:int}/edit"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

@using System.ComponentModel.DataAnnotations
@using DontNeglectYourDungeon.Data.Models
@using DontNeglectYourDungeon.Data.Services.Interfaces
@inject ILinkedCharacterService LinkedCharacterService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">ðŸ› </div>
        <div>
            <h1 class="h1">Edit Character Link</h1>
            <div class="muted">Update name or URL.</div>
        </div>
    </div>
</div>

<div class="tavern-card">
    @if (_loading)
    {
        <div class="muted">Loadingâ€¦</div>
    }
    else if (_notFound)
    {
        <div class="validation-message">Link not found (or you donâ€™t have access).</div>
        <div style="margin-top:.75rem;">
            <a class="btn" href="@_backHref">Return</a>
        </div>
    }
    else
    {
        <EditForm Model="_model" OnValidSubmit="@SaveAsync" FormName="EditLinkedCharacter">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div style="display:grid; gap:.75rem;">
                <div>
                    <label>Name</label>
                    <InputText @bind-Value="_model.DisplayName" />
                    <ValidationMessage For="@(() => _model.DisplayName)" />
                </div>

                <div>
                    <label>URL (D&amp;D Beyond)</label>
                    <InputText @bind-Value="_model.Url" />
                    <ValidationMessage For="@(() => _model.Url)" />
                    <div class="muted" style="margin-top:.25rem;">Must start with https://www.dndbeyond.com/</div>
                </div>

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="validation-message">@_error</div>
                }

                <div style="display:flex; gap:.75rem; margin-top:.5rem;">
                    <button class="btn" type="submit" disabled="@_saving">Save</button>
                    <a class="btn" href="@_backHref">Cancel</a>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    [SupplyParameterFromQuery] public int? CampaignId { get; set; }

    private bool _loading = true;
    private bool _saving;
    private bool _notFound;
    private string _error = string.Empty;

    private string _backHref => CampaignId is int cId ? $"/campaigns/{cId}/characters" : "/campaigns";

    private LinkedCharacter? _link;
    private EditModel _model = new();

    public class EditModel
    {
        [Required, StringLength(80, MinimumLength = 2)]
        public string DisplayName { get; set; } = "";

        [Required, StringLength(500)]
        public string Url { get; set; } = "";
    }

    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        _notFound = false;
        _error = string.Empty;

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var links = await LinkedCharacterService.GetForUserAsync(auth.User);

        _link = links.FirstOrDefault(l => l.Id == Id);
        if (_link is null)
        {
            _notFound = true;
            _loading = false;
            return;
        }

        _model.DisplayName = _link.DisplayName;
        _model.Url = _link.Url;

        _loading = false;
    }

    private async Task SaveAsync()
    {
        _saving = true;
        _error = string.Empty;

        try
        {
            if (_link is null)
            {
                _error = "Link not loaded.";
                return;
            }

            _link.DisplayName = _model.DisplayName.Trim();
            _link.Url = _model.Url.Trim();

            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var ok = await LinkedCharacterService.UpdateAsync(_link, auth.User);

            if (!ok)
            {
                _error = "Could not saveâ€”link not found or access denied.";
                return;
            }

            Nav.NavigateTo(_backHref);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _saving = false;
        }
    }
}
