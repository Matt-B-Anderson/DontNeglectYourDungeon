@page "/campaigns/{CampaignId:int}/characters"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

@using DontNeglectYourDungeon.Data.Models
@using DontNeglectYourDungeon.Data.Services.Interfaces
@inject ILinkedCharacterService LinkedCharacterService
@inject ICampaignService CampaignsService
@inject AuthenticationStateProvider AuthStateProvider

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">ðŸ§™</div>
        <div>
            <h1 class="h1">Character Links</h1>
            <div class="muted">@(_campaignName ?? "Campaign")</div>
        </div>
    </div>

    <div style="display:flex; gap:.5rem;">
        <a class="btn" href="@($"/campaigns/{CampaignId}/characters/new")">+ Add Link</a>
        <a class="btn" href="@($"/campaigns/{CampaignId}")">Back</a>
    </div>
</div>

<div class="tavern-card">
    @if (_loading)
    {
        <div class="muted">Loadingâ€¦</div>
    }
    else if (_noAccess)
    {
        <div class="validation-message">Campaign not found (or you donâ€™t have access).</div>
    }
    else if (_links.Count == 0)
    {
        <div class="muted">No character links yet.</div>
        <div style="margin-top:.75rem;">
            <a class="btn" href="@($"/campaigns/{CampaignId}/characters/new")">Add your first link</a>
        </div>
    }
    else
    {
        @foreach (var cl in _links)
        {
            <div class="tavern-card" style="background: #5a4530;">
                <div style="display:flex; justify-content:space-between; align-items:flex-start; gap:1rem;">
                    <div style="min-width:0;">
                        <div style="font-weight:800;">@cl.DisplayName</div>
                        <div class="muted" style="margin-top:.25rem; overflow-wrap:anywhere;">@cl.Url</div>

                        <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                            <a class="btn" href="@cl.Url" target="_blank" rel="noopener noreferrer">Open</a>
                            @if (cl.OwnerUserId == _currentUserId)
                            {
                                <a class="btn" href="@($"/characters/{cl.Id}/edit?campaignId={CampaignId}")">Edit</a>
                                <a class="btn btn-danger" href="@($"/characters/{cl.Id}/delete?campaignId={CampaignId}")">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter] public int CampaignId { get; set; }

    private bool _loading = true;
    private bool _noAccess;
    private bool _isOwner;
    private string? _campaignName;
    private string _currentUserId = "";
    private List<LinkedCharacter> _links = new();

    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        _noAccess = false;

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        _currentUserId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";

        // Allow any campaign member to view (not just owner)
        var campaign = await CampaignsService.GetByIdForMemberAsync(CampaignId, auth.User);

        if (campaign is null)
        {
            _noAccess = true;
            _links = new();
            _loading = false;
            return;
        }

        _isOwner = campaign.OwnerUserId == _currentUserId;
        _campaignName = campaign.Name;

        // Get campaign-specific character links
        // DMs see all links, players see only their own
        _links = await LinkedCharacterService.GetForCampaignAsync(CampaignId, auth.User);

        _loading = false;
    }
}
