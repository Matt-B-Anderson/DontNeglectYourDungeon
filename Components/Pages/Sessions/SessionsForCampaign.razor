@*
    Sessions List Page for a Campaign

    Shows all game sessions (meetings/play dates) for a specific campaign.
    Any campaign member can view sessions and create new ones.
    Only the user who created a session can edit or delete it (not even the DM).

    Authorization:
    - Only campaign members can view this page
    - All members can create sessions
    - Only session creator can edit/delete their session
*@
@page "/campaigns/{CampaignId:int}/sessions"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

@using DontNeglectYourDungeon.Data.Models
@using DontNeglectYourDungeon.Data.Services.Interfaces
@inject ISessionService SessionsService
@inject ICampaignService CampaignsService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">ðŸ“…</div>
        <div>
            <h1 class="h1">Sessions</h1>
            <div class="muted">@(_campaignName ?? "Campaign")</div>
        </div>
    </div>

    <div style="display:flex; gap:.5rem;">
        <a class="btn" href="@($"/campaigns/{CampaignId}/sessions/new")">+ Schedule</a>
        <a class="btn" href="/campaigns">Back</a>
    </div>
</div>

<div class="tavern-card">

    @if (_loading)
    {
        <div class="muted">Loading sessionsâ€¦</div>
    }
    else if (_noAccess)
    {
        <div class="validation-message">
            Campaign not found (or you donâ€™t have access).
        </div>
    }
    else if (_sessions.Count == 0)
    {
        <div class="muted">No sessions scheduled yet.</div>

        <div style="margin-top:.75rem;">
            <a class="btn" href="@($"/campaigns/{CampaignId}/sessions/new")">
                Schedule your first session
            </a>
        </div>
    }
    else
    {
        @foreach (var session in _sessions.OrderByDescending(s => s.SessionDate))
        {
            <div class="tavern-card" style="background: #372B20;">

                <div style="display:flex; justify-content:space-between; gap:1rem;">
                    <div>

                        <div style="font-weight:800;">
                            @session.Title
                        </div>

                        <div class="muted" style="margin-top:.25rem;">
                            @session.SessionDate.ToString("ddd, MMM d 'at' h:mm tt")
                        </div>

                        @if (!string.IsNullOrWhiteSpace(session.Summary))
                        {
                            <div class="muted" style="margin-top:.5rem;">
                                <strong>Summary:</strong>
                                @session.Summary
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(session.NextSteps))
                        {
                            <div class="muted" style="margin-top:.25rem;">
                                <strong>Next:</strong>
                                @session.NextSteps
                            </div>
                        }

                        <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                            @* All campaign members can view session details *@
                            <a class="btn" href="@($"/sessions/{session.Id}")">
                                View
                            </a>

                            @* Only the user who created this session can edit/delete it *@
                            @if (session.CreatedByUserId == _currentUserId)
                            {
                                <a class="btn" href="@($"/sessions/{session.Id}/edit")">
                                    Edit
                                </a>

                                <a class="btn btn-danger" href="@($"/sessions/{session.Id}/delete")">
                                    Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    // Campaign ID comes from the URL route parameter
    [Parameter] public int CampaignId { get; set; }

    // Component state
    private bool _loading = true;
    private bool _noAccess;
    private string? _campaignName;
    private string _currentUserId = "";
    private List<Session> _sessions = new();

    /// <summary>
    /// Loads sessions when page loads or CampaignId parameter changes.
    /// Checks if user is a campaign member first - non-members get "no access" message.
    /// </summary>
    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        _noAccess = false;

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        _currentUserId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";

        // Verify user is a member of this campaign (owner OR player)
        // This method returns null if user is not a member
        var campaign = await CampaignsService
            .GetByIdForMemberAsync(CampaignId, auth.User);

        if (campaign is null)
        {
            _noAccess = true;
            _sessions = new();
            _loading = false;
            return;
        }

        _campaignName = campaign.Name;

        // Load all sessions for this campaign (all members see same sessions)
        _sessions = await SessionsService
            .GetForCampaignAsync(CampaignId, auth.User);

        _loading = false;
    }
}
