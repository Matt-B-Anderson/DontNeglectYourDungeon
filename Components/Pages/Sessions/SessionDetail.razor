@*
    Session Detail Page

    Displays full details of a game session including title, date/time, location/link,
    summary, and next steps. Any campaign member can view. Only the creator can edit/delete.

    Special Feature: If location is a URL (starts with http/https), shows "Open" button
    that opens the link in a new tab (useful for Discord/Zoom/Roll20 links).

    Authorization:
    - Only campaign members can view
    - Only session creator can edit/delete
*@
@page "/sessions/{SessionId:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

@using DontNeglectYourDungeon.Data.Models
@using DontNeglectYourDungeon.Data.Services.Interfaces
@inject ISessionService SessionsService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">ðŸ“–</div>
        <div>
            <h1 class="h1">@(_session?.Title ?? "Session")</h1>
            <div class="muted">
                @(_session is null ? "" : _session.SessionDate.ToString("ddd, MMM d 'at' h:mm tt"))
            </div>
        </div>
    </div>

    <div style="display:flex; gap:.5rem;">
        @if (_session is not null)
        {
            @if (_session.CreatedByUserId == _currentUserId)
            {
                <a class="btn" href="@($"/sessions/{SessionId}/edit")">Edit</a>
                <a class="btn btn-danger" href="@($"/sessions/{SessionId}/delete")">Delete</a>
            }
            <a class="btn" href="@($"/campaigns/{_session.CampaignId}/sessions")">Back</a>
        }
        else
        {
            <a class="btn" href="/campaigns">Back</a>
        }
    </div>
</div>

<div class="tavern-card">
    @if (_loading)
    {
        <div class="muted">Loadingâ€¦</div>
    }
    else if (_session is null)
    {
        <div class="validation-message">Session not found (or you donâ€™t have access).</div>
    }
    else
    {
        @* Show location/link if provided *@
        @if (!string.IsNullOrWhiteSpace(_session.LocationOrLink))
        {
            <div class="muted">
                <strong>Location/Link:</strong> @_session.LocationOrLink
            </div>
            @* If location is a URL, show clickable button that opens in new tab *@
            @if (_session.LocationOrLink.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
                 _session.LocationOrLink.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
            {
                <div style="margin-top:.5rem;">
                    <a class="btn" href="@_session.LocationOrLink" target="_blank" rel="noopener noreferrer">Open</a>
                </div>
            }
            <div style="margin-top:1rem;"></div>
        }

        <div style="display:grid; gap:1rem;">
            <div>
                <div style="font-weight:800;">Summary</div>
                @if (string.IsNullOrWhiteSpace(_session.Summary))
                {
                    <div class="muted" style="margin-top:.25rem;">No summary yet.</div>
                }
                else
                {
                    <div class="muted" style="margin-top:.25rem; white-space:pre-wrap;">@_session.Summary</div>
                }
            </div>

            <div>
                <div style="font-weight:800;">Next Steps</div>
                @if (string.IsNullOrWhiteSpace(_session.NextSteps))
                {
                    <div class="muted" style="margin-top:.25rem;">No next steps yet.</div>
                }
                else
                {
                    <div class="muted" style="margin-top:.25rem; white-space:pre-wrap;">@_session.NextSteps</div>
                }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="validation-message" style="margin-top:1rem;">@_error</div>
        }
    }
</div>

@code {
    // Session ID comes from URL route parameter
    [Parameter] public int SessionId { get; set; }

    // Component state
    private bool _loading = true;
    private string _error = string.Empty;
    private string _currentUserId = "";
    private Session? _session;

    /// <summary>
    /// Loads session details when page loads or SessionId parameter changes.
    /// GetByIdAsync returns null if session doesn't exist or user is not a campaign member.
    /// </summary>
    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        _error = string.Empty;

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();

        // Load session (returns null if user is not a member of the campaign)
        _session = await SessionsService.GetByIdAsync(SessionId, auth.User);
        _currentUserId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";

        _loading = false;
    }
}
