@page "/campaigns/{CampaignId:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using DontNeglectYourDungeon.Data.Models
@using DontNeglectYourDungeon.Data.Services.Interfaces
@inject ICampaignService CampaignsService
@inject AuthenticationStateProvider AuthStateProvider

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">ðŸ§¾</div>
        <div>
            <h1 class="h1">@(_campaign?.Name ?? "Campaign")</h1>
            <div class="muted">A single scroll for your partyâ€™s legend.</div>
        </div>
    </div>

    <div style="display:flex; gap:.5rem;">
        @if (_campaign is not null)
        {
            <a class="btn" href="@($"/campaigns/{CampaignId}/edit")">Edit</a>
            <a class="btn btn-danger" href="@($"/campaigns/{CampaignId}/delete")">Delete</a>
        }
        <a class="btn" href="/campaigns">Back</a>
    </div>
</div>

<div class="tavern-card">
    @if (_loading)
    {
        <div class="muted">Loadingâ€¦</div>
    }
    else if (_campaign is null)
    {
        <div class="validation-message">Campaign not found (or you donâ€™t have access).</div>
    }
    else
    {
        @if (!string.IsNullOrWhiteSpace(_campaign.Description))
        {
            <div class="muted" style="white-space:pre-wrap;">@_campaign.Description</div>
            <div style="margin-top:1rem;"></div>
        }

        <div style="display:grid; gap:1rem;">
            <div class="tavern-card" style="background: var(--panel2);">
                <div style="font-weight:800;">Sessions</div>
                <div class="muted" style="margin-top:.25rem;">Schedule and review your adventure log.</div>
                <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                    <a class="btn" href="@($"/campaigns/{CampaignId}/sessions")">View Sessions</a>
                    <a class="btn" href="@($"/campaigns/{CampaignId}/sessions/new")">+ Schedule</a>
                </div>
            </div>

            <div class="tavern-card" style="background: var(--panel2);">
                <div style="font-weight:800;">Character Links</div>
                <div class="muted" style="margin-top:.25rem;">External character sheets (D&amp;D Beyond, etc.).</div>
                <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                    <a class="btn" href="@($"/campaigns/{CampaignId}/characters")">View Links</a>
                    <a class="btn" href="@($"/campaigns/{CampaignId}/characters/new")">+ Add Link</a>
                </div>
            </div>
        </div>

        <div class="muted" style="margin-top:1rem;">
            Last updated: @_campaign.CreatedUtc.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
        </div>
    }
</div>

@code {
    [Parameter] public int CampaignId { get; set; }

    private bool _loading = true;
    private Campaign? _campaign;

    protected override async Task OnParametersSetAsync()
    {
        _loading = true;

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();

        // âœ… Adjust only this call if your teammate used a different name
        _campaign = await CampaignsService.GetOwnedByUserAsync(CampaignId, auth.User);

        _loading = false;
    }
}
