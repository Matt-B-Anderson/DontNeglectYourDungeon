@*
    Campaign Detail Page (Campaign Hub)

    Main overview page for a campaign showing:
    - Join code (DMs only - used to invite players)
    - Upcoming session (next scheduled session)
    - Quick links to Sessions and Character Links

    Authorization:
    - Any campaign member can view this page
    - Only campaign owner (DM) sees join code and Edit/Delete buttons
*@
@page "/campaigns/{CampaignId:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

@using DontNeglectYourDungeon.Data.Models
@using DontNeglectYourDungeon.Data.Services.Interfaces
@inject ICampaignService CampaignsService
@inject ISessionService SessionsService
@inject AuthenticationStateProvider AuthStateProvider

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">ðŸ§¾</div>
        <div>
            <h1 class="h1">@(_campaign?.Name ?? "Campaign")</h1>
            <div class="muted">A single scroll for your partyâ€™s legend.</div>
        </div>
    </div>

    <div style="display:flex; gap:.5rem;">
        @if (_campaign is not null && _isOwner)
        {
            <a class="btn" href="@($"/campaigns/{CampaignId}/edit")">Edit</a>
            <a class="btn btn-danger" href="@($"/campaigns/{CampaignId}/delete")">Delete</a>
        }
        <a class="btn" href="/campaigns">Back</a>
    </div>
</div>

<div class="tavern-card">
    @if (_loading)
    {
        <div class="muted">Loadingâ€¦</div>
    }
    else if (_campaign is null)
    {
        <div class="validation-message">Campaign not found (or you donâ€™t have access).</div>
    }
    else
    {
        @if (!string.IsNullOrWhiteSpace(_campaign.System))
        {
            <div class="muted">
                <strong>System:</strong> @_campaign.System
            </div>
        }

        @* Only DMs (campaign owners) can see the join code - players don't need it *@
        @if (_isOwner)
        {
            <div class="tavern-card" style="background: var(--panel2); margin-top:1rem;">
                <div style="font-weight:800;">ðŸ”‘ Join Code</div>
                <div class="muted" style="margin-top:.25rem;">
                    Share this code with your players so they can join your campaign.
                </div>
                <div style="margin-top:.5rem;">
                    <div style="font-size:1.5rem; font-weight:800; letter-spacing:0.2rem; color:var(--accent);">
                        @_campaign.JoinCode
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(_campaign.Description))
        {
            <div class="muted" style="white-space:pre-wrap; margin-top:.5rem;">@_campaign.Description</div>
        }

        @if (_upcomingSession is not null)
        {
            <div class="tavern-card" style="background: var(--panel2); margin-top:1rem;">
                <div style="font-weight:800;">ðŸ“… Upcoming Session</div>
                <div style="margin-top:.5rem;">
                    <div style="font-weight:600;">@_upcomingSession.Title</div>
                    <div class="muted" style="margin-top:.25rem;">
                        @_upcomingSession.SessionDate.ToString("dddd, MMMM d, yyyy 'at' h:mm tt")
                    </div>
                    @if (!string.IsNullOrWhiteSpace(_upcomingSession.LocationOrLink))
                    {
                        <div class="muted" style="margin-top:.25rem;">
                            <strong>Location:</strong> @_upcomingSession.LocationOrLink
                        </div>
                    }
                </div>
                <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                    <a class="btn" href="@($"/sessions/{_upcomingSession.Id}")">View Details</a>
                    <a class="btn" href="@($"/sessions/{_upcomingSession.Id}/edit")">Edit</a>
                </div>
            </div>
        }

        <div style="display:grid; gap:1rem; margin-top:1rem;">
            <div class="tavern-card" style="background: var(--panel2);">
                <div style="font-weight:800;">Sessions</div>
                <div class="muted" style="margin-top:.25rem;">Schedule and review your adventure log.</div>
                <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                    <a class="btn" href="@($"/campaigns/{CampaignId}/sessions")">View Sessions</a>
                    <a class="btn" href="@($"/campaigns/{CampaignId}/sessions/new")">+ Schedule</a>
                </div>
            </div>

            <div class="tavern-card" style="background: var(--panel2);">
                <div style="font-weight:800;">Character Links</div>
                <div class="muted" style="margin-top:.25rem;">External character sheets (D&amp;D Beyond, etc.).</div>
                <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                    <a class="btn" href="@($"/campaigns/{CampaignId}/characters")">View Links</a>
                    <a class="btn" href="@($"/campaigns/{CampaignId}/characters/new")">+ Add Link</a>
                </div>
            </div>
        </div>

        <div class="muted" style="margin-top:1rem;">
            Last updated: @_campaign.CreatedUtc.ToLocalTime().ToString("MMM d, yyyy h:mm tt")
        </div>
    }
</div>

@code {
    // Campaign ID comes from the URL route parameter
    [Parameter] public int CampaignId { get; set; }

    // Component state
    private bool _loading = true;
    private bool _isOwner;
    private Campaign? _campaign;
    private Session? _upcomingSession;

    /// <summary>
    /// Loads campaign details and upcoming session when page loads.
    /// Verifies user is a campaign member (owner OR player).
    /// Finds the next upcoming session to display in the overview.
    /// </summary>
    protected override async Task OnParametersSetAsync()
    {
        _loading = true;

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();

        // Verify user is a campaign member (owner OR player)
        _campaign = await CampaignsService.GetByIdForMemberAsync(CampaignId, auth.User);

        if (_campaign is not null)
        {
            var userId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            _isOwner = _campaign.OwnerUserId == userId;

            // Find the next upcoming session (sessions with date in the future)
            var allSessions = await SessionsService.GetForCampaignAsync(CampaignId, auth.User);
            _upcomingSession = allSessions
                .Where(s => s.SessionDate >= DateTime.Now)
                .OrderBy(s => s.SessionDate)
                .FirstOrDefault();
        }

        _loading = false;
    }
}
