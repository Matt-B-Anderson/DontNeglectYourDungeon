@*
    Campaigns List Page

    Shows all campaigns the current user belongs to (either as DM/owner or as a player who joined).
    Users can view, create (DM only), edit (owner only), and delete (owner only) campaigns.

    Authorization:
    - Any authenticated user can view this page
    - Only users with "DM" role can create new campaigns
    - Only campaign owners can see Edit/Delete buttons
*@
@page "/campaigns"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

@using DontNeglectYourDungeon.Data.Models
@using DontNeglectYourDungeon.Data.Services.Interfaces
@inject ICampaignService CampaignsService
@inject AuthenticationStateProvider AuthStateProvider

<div class="tavern-header">
    <div class="brand">
        <div class="brand-badge">üè∞</div>
        <div>
            <h1 class="h1">Campaigns</h1>
            <div class="muted">Your active adventures; all in one ledger.</div>
        </div>
    </div>

    <div style="display:flex; gap:.5rem;">
        @* All users can join campaigns using a code *@
        <a class="btn" href="/campaigns/join">Join Campaign</a>
        @* Only DMs can create new campaigns *@
        @if (_isDm)
        {
            <a class="btn" href="/campaigns/new">+ New Campaign</a>
        }
    </div>
</div>

<div class="tavern-card">
    @if (_loading)
    {
        <div class="muted">Loading‚Ä¶</div>
    }
    else if (_campaigns.Count == 0)
    {
        <div class="muted">No campaigns yet.</div>
        <div style="margin-top:.75rem;">
            <a class="btn" href="/campaigns/new">Create your first campaign</a>
        </div>
    }
    else
    {
        @foreach (var c in _campaigns.OrderByDescending(x => x.CreatedUtc))
        {
            <div class="tavern-card" style="background: #4A3426;">
                <div style="display:flex; justify-content:space-between; gap:1rem;">
                    <div>
                        <div style="font-weight:800;">@c.Name</div>
                        @if (!string.IsNullOrWhiteSpace(c.Description))
                        {
                            <div class="muted" style="margin-top:.25rem; white-space:pre-wrap;">@c.Description</div>
                        }
                        <div class="muted" style="margin-top:.5rem;">
                            Created: @c.CreatedUtc.ToLocalTime().ToString("MMM d, yyyy")
                        </div>

                        <div style="display:flex; gap:.5rem; margin-top:.75rem; flex-wrap:wrap;">
                            @* All campaign members can open/view the campaign *@
                            <a class="btn" href="@($"/campaigns/{c.Id}")">Open</a>
                            @* Only the owner (DM who created it) can edit or delete *@
                            @if (c.OwnerUserId == _currentUserId)
                            {
                                <a class="btn" href="@($"/campaigns/{c.Id}/edit")">Edit</a>
                                <a class="btn btn-danger" href="@($"/campaigns/{c.Id}/delete")">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    // Component state
    private bool _loading = true;
    private List<Campaign> _campaigns = new();
    private string _currentUserId = "";
    private bool _isDm = false;

    /// <summary>
    /// Loads all campaigns for the current user when the page first loads.
    /// Gets user ID and DM role status to control what buttons are shown.
    /// GetForUserAsync returns campaigns where user is owner OR member.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        _loading = true;

        // Get current user's ID and role from authentication
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        _currentUserId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";
        _isDm = auth.User.IsInRole("DM");

        // Load all campaigns this user owns or joined
        _campaigns = await CampaignsService.GetForUserAsync(auth.User);

        _loading = false;
    }
}
